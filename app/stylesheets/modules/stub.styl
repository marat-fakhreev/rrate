.stub
  background-image: url('../images/under-construction.jpg')
  background-size: cover
  background-position: left center

  &.red-label
    .label
      sprite($red-label)

    a
    input[type="submit"]
      &:hover
        color: $mainRedColor

  &.grey-label
    .label
      sprite($grey-label)

    a
    input[type="submit"]
      &:hover
        color: $mainRedColor

  &.green-label
    .label
      sprite($green-label)

    a
    input[type="submit"]
      &:hover
        color: $mainLemonColor


.line
  width: 100%
  height: 10px
  background-color: $mainGreyColor

.label
  position: absolute
  top: 2px
  left: 50%
  margin-left: -238px
  z-index: 100

  .label-form
    display: none

    &.label-form--before
      h3
        margin: 110px 0 0 0

    &.label-form--after
      h3
        margin: 30px 0 0 0

    &.show
      display: block

  .timer
    center(340px)
    margin-top: 35px
    margin-bottom: 35px
    position: relative

    .two-dot
      position: absolute
      height: 70px
      width: 20px
      text-align: center
      line-height: 60px
      color: $mainGreyColor
      font-size: 46px
      margin-left: -1px
      z-index: 10

      &:nth-child(1)
        left: 70px

      &:nth-child(2)
        left: 160px

      &:nth-child(3)
        left: 250px

    .timer-list
      clearfix()

      li
        col(1/4)
        width: 70px
        height: 70px
        background-color: $lightGreyColor
        border-radius: 3px
        position: relative
        box-sizing: border-box
        margin-right: 20px

      .count
        display: block
        width: 70px
        height: 70px
        position: relative
        z-index: 10
        color: $mainGreyColor
        line-height: 70px
        text-align: center
        font-size: 40px

      .type
        position: absolute
        bottom: -16px
        width: 70px
        text-align: center
        font-size: 12px

  .icon-logo
    font-size: 194px
    color: #fff
    margin: 30px auto 15px
    text-align: center
    display: block

  h3
    color: #fff

  p
    margin: 15px auto 40px
    width: 384px
    display: block
    color: #fff
    font-size: 14px

  .label-text
    font-size: 18px
    margin-bottom: 25px

  form
    margin: 15px auto 5px
    width: 384px
    position: relative

    .fa-search
      position: absolute
      color: #fff
      top: 15px
      left: 15px

  .button--small
    left: 50%
    margin-left: -77px

  input
    &[type="text"]
      display: block
      width: 100%
      height: 44px
      background-color: $mainGreyColor
      border: none
      border-radius: 4px
      box-sizing: border-box
      padding: 5px 100px 5px 37px
      outline: none
      color: #fff
      font-size: 14px
      font-family: $dinMedium

      &:hover
      &:focus
        background-color: $mainGreyColorHover
        cursor: pointer

    &[type="submit"]
      box-sizing: border-box
      padding: 0 20px
      position: absolute
      top: 5px
      right: 5px
      bottom: 5px
      font-size: 14px
      font-family: $dinMedium
      color: $mainGreyColor
      cursor: pointer
      height: auto
      line-height: 17px
      outline: 0 none

      &:hover
        color: $mainRedColor

.stub-footer
  center(290px)
  position: fixed
  bottom: 0
  left: 0
  right: 0
  height: 30px

  span
    display: block
    float: left
