.button
  background-color: #fff
  border-radius: 4px
  position: relative
  padding: 0 50px
  text-decoration: none
  color: $mainRedColor
  font-size: 18px
  text-align: center
  box-sizing: border-box
  height: 50px
  line-height: 50px
  display: inline-block
  cursor: pointer

.button--small
  box-sizing: border-box
  padding: 8px 20px
  font-size: 14px
  font-family: $dinMedium
  color: $mainGreyColor
  cursor: pointer
  height: auto
  line-height: 17px
  outline: 0 none

  &:hover
    color: $mainRedColor

.button--red
  background-color: $mainRedColor
  color: #fff

  &:hover
    background-color: $mainRedColorHover

.button--green
  background-color: $mainGreenColor
  color: #fff

  &:hover
    background-color: $mainGreenColorHover

.button--grey
  background-color: $mainGreyColor
  color: #fff

  &:hover
    background-color: $mainGreyColorHover

.button--center
  width: 250px
  margin: 0 auto
  display: block

.button--with-arrow
  span
    float: left
    display: block
    padding: 0 22px 0 0
    position: relative
    line-height: 50px

    .icon-arrow
      font-size: 15px
      position: absolute
      top: 19px
      right: 0

.text-block
  clearfix()

  &.text-block-left
    margin: 100px 50px 0 90px

  &.text-block-right
    margin: 80px 110px 0 125px

    .text
      float: left
      margin: 0 60px 0 0

  .circle-api
    sprite($circle-api)
    float: left
    margin: 0 70px 0 0

  .circle-rocket
    sprite($circle-rocket)
    float: left
    margin: 0 70px 0 0

  .circle-document
    sprite($circle-document)
    float: left

  .text
    padding: 30px 0

  h2
    margin: 0 0 20px 0

.additional-block
  box-sizing: border-box
  padding: 30px 0 0 0
  position: relative

  p
    float: left
    margin: 0 35px 0 10px

  .button
    padding: 0 25px

.social-small-block
  width: 80px
  float: right

  li
    col(1/3)

    .fa
      position: relative
      font-size: 20px

      &.fa-vk
        font-size: 26px
        top: -5px

.clouds
  position: absolute
  width: 1024px
  top: 0

  .clouds-big
    sprite($clouds)
    position: absolute
    left: -100px

  .clouds-1
    sprite($cloud-1)
    position: absolute

  .clouds-2
    sprite($cloud-2)
    position: absolute

  .clouds-3
    sprite($cloud-3)
    position: absolute

.share-block
  center(300px)
  padding: 25px 0
  background-color: $mainRedColor
  margin-top: 80px
  border-radius: 5px

  span
    display: block
    text-align: center
    color: #fff
    font-size: 18px
    margin: 0 0 10px 0

  .like-block
    center(230px)

    .like
      col(1/2)
