html,
body
  margin: 0
  padding: 0
  height: 100%
  font-family: $dinMedium
  color: $mainFontColor

fieldset
  border: none

h1
  text-align: center
  font-size: 71px
  font-family: $dinRegular
  color: $mainRedColor
  margin: 0 0 40px 0

h2
  font-size: 36px
  font-family: $dinRegular

p
  font-size: 18px
  line-height: 1.3
  margin: 0 0 30px 0

input
  border: none

ul
ol
li
  list-style-type: none

::-webkit-input-placeholder
   color: rgba(#fff, 0.8)

:-moz-placeholder
   color: rgba(#fff, 0.8)

::-moz-placeholder
   color: rgba(#fff, 0.8)

:-ms-input-placeholder
   color: rgba(#fff, 0.8)

.screen--dark
  background-color: $bgGreyColor

  h1
  h2
  p
    color: #fff

.text--center
  text-align: center

.text--with-shift
  margin: 0 0 40px 0
