header
  position: fixed
  top: 0
  left: 0
  right: 0
  height: 0
  opacity: 0
  background-color: #fff
  z-index: 1000
  border-top: 2px solid $mainRedColor
  height: 0
  overflow: hidden
  box-sizing: border-box
  transition: all 0.5s ease

  &.displayed
    height: 70px
    opacity: 1
    transition: all 0.5s ease

  .header-inner
    center($wrapperWidth)

  .logo
    float: left
    padding: 10px 0
    margin: 0 35px 0 0

    .icon-logo
      font-size: 46px
      margin: 0 8px 0 0
      float: left
      color: $mainRedColor

    .icon2-text-logo
      float: left
      font-size: 30px
      color: $mainGreyColor
      display: block
      line-height: 48px
      height: 100%

  nav
    float: left

    li
      float: left
      font-size: 18px
      margin: 0 33px 0 0
      line-height: 66px
      cursor: pointer
      display: block

      span
        font-size: 18px

      &:hover
        color: $mainRedColor

      &.active
        color: $mainRedColor

        span
          box-shadow: 0 2px 0 0 $mainRedColor

  .social-block
    float: right
    position: relative

    li
      float: right
      line-height: 65px
      font-size: 20px
      margin: 0 15px 0 0

      &:first-child
        margin: 0

    .s-icon
      font-size: 22px
      color: $mainRedColor
      line-height: 66px
