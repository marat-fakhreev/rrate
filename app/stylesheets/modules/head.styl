$skyColor = #b7e7e7

.head
  margin: 0 auto
  height: 780px
  width: 100%
  border-bottom: 2px solid $mainRedColor

.head-picture
  margin: 0 auto
  height: 715px
  width: 100%
  background-color: $skyColor
  border-top: 10px solid $mainGreyColor
  border-bottom: 1px solid #fff
  box-shadow: 0 2px 1px 0 $mainRedColor

  .picture
    width: 100%
    height: 100%

  .layer
    height: 715px
    width: 100%
    background-size: 50% auto
    position: absolute
    top: 10px
    left: 0
    right: 0
    bottom: 0

    &.layer--foreground-layer
      z-index: 20
      background-image: url('../images/city-front.png')

    &.layer--background-layer
      z-index: 10
      background-image: url('../images/city-back.png')

    ul.head-list
      center($wrapperWith)

      li
        col(1/4)
        list-style-type: none
