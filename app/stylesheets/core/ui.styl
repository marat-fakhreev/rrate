.button
  background-color: #fff
  border-radius: 4px
  position: relative
  padding: 0 50px
  text-decoration: none
  color: $mainRedColor
  font-size: 18px
  text-align: center
  box-sizing: border-box
  height: 50px
  line-height: 50px
  display: inline-block
  cursor: pointer

.button--small
  box-sizing: border-box
  padding: 8px 20px
  font-size: 14px
  font-family: $dinMedium
  color: $mainGreyColor
  cursor: pointer
  height: auto
  line-height: 17px
  outline: 0 none

  &:hover
    color: $mainRedColor

.button--red
  background-color: $mainRedColor
  color: #fff

  &:hover
    background-color: $mainRedColorHover

.button--green
  background-color: $mainGreenColor
  color: #fff

  &:hover
    background-color: $mainGreenColorHover

.button--grey
  background-color: $mainGreyColor
  color: #fff

  &:hover
    background-color: $mainGreyColorHover

.button--center
  width: 250px
  margin: 0 auto
  display: block

.button--with-arrow
  span
    float: left
    display: block
    padding: 0 22px 0 0
    position: relative
    line-height: 50px

    .icon-arrow
      font-size: 15px
      position: absolute
      top: 19px
      right: 0

.text-block
  clearfix()

  &.text-block-left
    margin: 70px 50px 0 90px

  &.text-block-right
    margin: 80px 110px 0 125px

    .text
      float: left
      margin: 0 60px 0 0

  .circle-api
    sprite($circle-api)
    float: left
    margin: 0 70px 0 0

  .circle-rocket
    sprite($circle-rocket)
    float: left
    margin: 0 70px 0 0

  .circle-document
    sprite($circle-document)
    float: left

  .text
    padding: 30px 0

  h2
    margin: 0 0 20px 0

.additional-block
  box-sizing: border-box
  padding: 30px 0 0 0
  position: relative

  p
    float: left
    margin: 0 35px 0 10px

  .button
    padding: 0 25px

.social-small-block
  width: 80px
  float: right

  li
    col(1/3)

    .s-icon
      position: relative
      font-size: 16px
      line-height: 1.3

.clouds
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 200%
  margin-left: -50%
  overflow: hidden

  .clouds-big
    sprite($clouds)
    position: absolute
    left: -100px

  .clouds-1
    background-image: url('../images/cloud-1.png')
    width: 100%
    height: 191px
    position: absolute
    top: 0

  .clouds-2
    background-image: url('../images/cloud-2.png')
    width: 100%
    height: 204px
    position: absolute
    top: 40%
    left: -10%

  .clouds-3
    background-image: url('../images/cloud-3.png')
    width: 100%
    height: 155px
    position: absolute
    top: 80%
    left: -20%

.share-block
  center(300px)
  padding: 25px 0
  background-color: $mainRedColor
  margin-top: 80px
  border-radius: 5px

  span
    display: block
    text-align: center
    color: #fff
    font-size: 18px
    margin: 0 0 10px 0

  .like-block
    center(230px)

    .like
      col(1/2)

.color--red
  color: $mainRedColor
  display: inline

.marker
  position: absolute
  background: #ffffff
  display: inline-block
  padding: 15px
  box-sizing: border-box
  border-radius: 5px
  font-size: 14px

  .title
    display: block
    font-size: 18px

  .counter-value
    color: $mainRedColor
    font-size: 14px

  &::before
    content: ""
    top: 113%
    left: 33px
    position: absolute
    height: 5px
    width: 5px
    background-color: $mainRedColor
    border-radius: 50%

  &::after
    top: 100%
    left: 35px
    content: ""
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    border: solid transparent
    border-color: rgba(255, 255, 255, 0)
    border-top-color: #ffffff
    border-width: 5px
    margin-left: -5px

#social
  position: fixed
  top: 0
  left: 0
  opacity: 0
  overflow: hidden
  width: 0
  height: 0
